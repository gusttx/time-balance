{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Time Balance",
  "version": "1.0.0",
  "identifier": "com.time-balance.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Time Balance",
        "width": 510,
        "height": 700,
        "resizable": false,
        "center": true,
        "backgroundColor": "#0a0a0a",
        "dragDropEnabled": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
